#!/bin/bash
FOLDER='/home/dashboard/web-sdk-demo/current/public';
SERVER='dashboard@jenkins-2.adjust.com';

echo "--- clean demo folder ---";
rm -rf ./demo/*

echo "--- build demo folder ---";
npm run build:demo

echo "--- create deploy folder ---"
ssh ${SERVER} "[ -d $FOLDER ] || mkdir -p $FOLDER"

echo "--- copy files to $SERVER:$FOLDER ---"
rsync -a ./demo/ ${SERVER}:${FOLDER} --delete
